<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundWhite"
    tools:context=".MainGame">

    <LinearLayout
        android:id="@+id/upperPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/gameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/gameIcon"
            android:layout_width="89dp"
            android:layout_height="89dp"
            android:layout_margin="2dp"
            android:background="@drawable/app_icon"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="8dp" />

        <TextView
            android:id="@+id/label_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:layout_gravity="center"
            android:text="DIFFICULT"
            android:textAlignment="center"
            android:textColor="@color/colorOrange"
            android:textSize="24sp"
            android:textStyle="bold" />


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/configPanel"
        android:layout_width="385dp"
        android:layout_height="35dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/gameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">


        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="21dp"
            android:layout_height="18dp"
            android:background="@drawable/back_arrow"
            android:onClick="goMenu" />

        <TextView
            android:id="@+id/game_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="( 01:29 )"
            android:textAlignment="center"
            android:textColor="@color/textPurple"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/config_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:layout_marginEnd="0dp"
            android:background="@drawable/config_icon"
            android:onClick="goSettings" />

    </RelativeLayout>





    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="248dp"
        android:layout_marginTop="264dp"
        android:background="@color/backgroundYellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/gameLayout"
        android:layout_width="388dp"
        android:layout_height="300dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="108dp"
        android:layout_weight="0.7"
        android:background="@drawable/game_layout"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent">


        <include layout="@layout/board_column" />

        <include layout="@layout/board_column" />

        <include layout="@layout/board_column" />

        <include layout="@layout/board_column" />

        <include layout="@layout/board_column" />

        <include layout="@layout/board_column" />

        <include layout="@layout/board_column" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/turnLayout"
        android:layout_width="383dp"
        android:layout_height="85dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="0.7"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight=".5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/PlayerTurnImage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:background="@drawable/turn_shape" />

            <TextView
                android:id="@+id/PlayerTurnLable"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight=".5"
                android:text="You"
                android:textAlignment="textStart"
                android:textColor="@color/textPurple"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight=".5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/OpponentTurnImage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:background="@drawable/turn_shape" />

            <TextView
                android:id="@+id/OpponentTurnLable"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight=".5"
                android:fontFamily="sans-serif"
                android:text="Opponent"
                android:textColor="@color/textPurple"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>



</android.support.constraint.ConstraintLayout>