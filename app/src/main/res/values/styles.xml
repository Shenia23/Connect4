<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/backgroundLilac</item>
        <item name="colorPrimaryDark">@color/colorLilac</item>
        <item name="colorAccent">@color/colorOrange</item>
    </style>

    <style id="mainDark" name="mainDark" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/backgroundLilac</item>
        <item name="colorPrimaryDark">@color/textPurple</item>
        <item name="color">@color/white</item>
    </style>
    <style id="mainLight" name="mainLight" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/backgroundYellow</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="color">@color/textPurple</item>
    </style>

    <style id="gameDark" name="gameDark" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/backgroundLilacGame</item>
        <item name="colorPrimaryDark">@color/textPurple</item>
        <item name="color">@color/backgroundWhite</item>
        <item name="colorAccent">@color/backgroundYellow</item>
        <item name="colorBackgroundFloating">@color/backgroundYellow</item>

        android:background="@drawable/game_layout"
    </style>
    <style id="gameLight" name="gameLight" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/backgroundWhite</item>
        <item name="colorPrimaryDark">@color/backgroundYellow</item>
        <item name="color">@color/colorOrange</item>
        <item name="colorAccent">@color/textPurple</item>
        <item name="colorBackgroundFloating">@color/backgroundLilac</item>
    </style>

    <style id="settingsDark" name="settingsDark" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/fichaoscura</item>
        <item name="colorPrimaryDark">@color/textPurple</item>
        <item name="color">@color/white</item>

    </style>
    <style id="settingsLight" name="settingsLight" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/backgroundLilac</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="color">@color/textPurple</item>
    </style>


    <style id="winDark" name="winDark" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/textPurple</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="color">@color/colorOrange</item>

        android:background="@drawable/game_layout"
    </style>

    <style id="winLight" name="winLight" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/backgroundLilac</item>
        <item name="colorPrimaryDark">@color/textPurple</item>
        <item name="color">@color/backgroundYellow</item>
    </style>
</resources>
