<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    style="@style/Widget.AppCompat.Light.PopupMenu"
    android:layout_gravity="center"
    android:layout_width="280dp"
    android:background="?attr/color"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Information About the Authors"
        android:textColor="?attr/colorPrimaryDark" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:text="This App was made by:"
        android:textColor="?attr/colorPrimaryDark"></TextView>

    <TextView
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:text="Aurora Paz Pérez"
        android:textColor="?attr/colorPrimaryDark"></TextView>

    <TextView
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:text="Marielena Márquez Barreiro"
        android:textColor="?attr/colorPrimaryDark"></TextView>
    <TextView
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:text="Eugenia Kuchumova "
        android:textColor="?attr/colorPrimaryDark"></TextView>
    <TextView
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:text="Álvaro Corbacho Cuadrado"
        android:textColor="?attr/colorPrimaryDark">
    </TextView>
</LinearLayout>